<aura:component controller = 'CampingListController' >
	<aura:attribute name="items" type="Camping_Item__c[]" />
	<aura:attribute name="newItem" type="Camping_Item__c" default="{'sobjectType': 'Camping_Item__c',
																	'Name':'New Item',
																	'Price__c':0,
																	'Quantity__c':0,
																	'Packed__c':false}" />

	<aura:handler name="init" action="{!c.doInit}" value="{!this}"/> 

	<form class="slds-form--stacked">
		<lightning:input aura:id="itemForm"
						 name="ItemName"
						 label="Name"
						 value="{!v.newItem.Name}"
						 maxlength="10"/>
		<lightning:input type="number"
						 aura:id="itemForm"
						 name="ItemPrice"
						 label="Price"
						 value="{!v.newItem.Price__c}"
						 min="0.1"
						 step="0.1"
						 formatter="currency"
						 messageWhenRangeUnderFlow="Amount should be atleast $0.1"/>
		<lightning:input type="number"
						 aura:id="itemForm"
						 name="ItemQuantity"
						 label="Quantity"
						 value="{!v.newItem.Quantity__c}"
						 min="1"
						 messageWhenRangeUnderflow="Minnimum Quantitiy is 1"/>
		<lightning:input type="checkbox"
						 name=""
						 aura:id="itemForm"
						 label="Packed?"
						 checked="{!v.newItem.Packed__c}" />
		<lightning:button label="Create Item" 
	                              class="slds-m-top--medium"
	                              variant="brand"
	                              onclick="{!c.clickCreateItem}"/>	 
	</form>

	<p class="slds-p-horizontal--small">
    	<aura:iteration items="{!v.items}" var="campItem">
    		<c:campingListItem item="{!campItem}"/>
    	</aura:iteration>
    </p>
    
</aura:component>